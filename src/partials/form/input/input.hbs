<input 
  class="input text text_size_m text_weight_regular"
  type={{type}}
  {{#if value}}value={{value}}{{else}}value=""{{/if}}
  {{#if autocomplete}}autocomplete{{else}}autocomplete="off"{{/if}}
  {{#if name}}name={{name}}{{/if}}
  {{#if error}}data-error="true"{{/if}}
  {{#if placeholder}}placeholder={{placeholder}}{{/if}}
  {{#if id}}id={{id}}{{/if}}
  {{#if accept}}accept={{accept}}{{/if}}

/>

