<section class="profile-edit-data flex-vertical-left">
  <h1 class="profile-edit-data__title text text_size_m text_weight_bold">
    {{user.first_name}} {{user.second_name}}
  </h1>
  <label
    class="profile-edit-data__avatar-label"
    for="avatar-input"
    style="width: 100px; height: 100px;"
  >
    <div class="profile-edit-data__avatar-thumb" style="background-image: url({{#if user.avatar}}{{user.avatar}}{{else}}{{avatarTemplate}}{{/if}})"></div>
    <div class="profile-edit-data__avatar-edit-icon icon icon_large">
      {{{Icon type="avatarEdit"}}}
    </div>
  </label>
  

    {{{Input onChange=handleAvatarChange id="avatar-input" accept="image/*" ref="avatarInput" type="file" name="avatar" id=id accept=accept}}}


  <div class="profile-edit-data__form">
    {{{Form
      inputs=inputs
      ref="formRef"
      formButton=formButton
      formName="editData"
      handleSubmit=handleSubmit
    }}}
  </div>
</section>

