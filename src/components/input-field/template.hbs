<label class="label {{#if required}}label_required{{/if}} flex-vertical-left text text_size_m text_weight_thin">
  {{#if labelText}}
    <span>
      {{labelText}}
    </span>
  {{/if}}
    {{#with this}}
      {{{Input
          name=name
          type=type
          id=id
          required=required
          placeholder=placeholder
          value=value
          errorMessage=errorMessage
          onChange=onChange
          error=error
          autocomplete=autocomplete
          accept=accept
      }}}
    {{/with}}
    <div class="label__error text text_size_xs text_weight_thin">
  {{#if errorMessage}}
    {{errorMessage}}
  {{/if}}
    </div>
</label>
