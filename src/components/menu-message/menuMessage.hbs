<article class="menu-message 
  {{#if active}}menu-message_active{{/if}}
">
<div class="menu-message__avatar flex-centered">
  {{{Avatar size="m" avatar=avatar abbr=abbr}}}
  {{#if unread_count}}
    <div class="menu-message__tag flex-centered text text_size_s text_weight_regular ">
      {{unread_count}}
    </div>
  {{/if}}
</div>

{{#if expanded}}
  <div class="menu-message__content-wrapper flex-vertical-left
    {{#if active}}menu-message__content_active{{/if}}
  ">
    <h3 class="menu-message__title text text_size_m text_weight_bold">{{title}}</h3>
    {{#if last_message}}
      <span class="menu-message__content text text_size_xs text_weight_regular ">
        {{last_message.content}}
      </span>
      <time datetime="{{last_message.time}}" class="menu-message__time text text_size_xs text_weight_regular ">{{time}}</time>
    {{else}}


<span class="menu-message__content text text_size_xs text_weight_regular">
  Пока в этом чате не было сообщений...
</span>



    {{/if}}
  </div>
{{/if}}
</article>
