<input 
  class="input text text_size_m text_weight_regular {{class}}"
  name="{{name}}"
  id="{{id}}"
  {{#if type}} type={{type}} {{else}} type="text" {{/if}}
  {{#if value}} value="{{value}}" {{/if}}
  {{#if error}} data-error="true" {{/if}}
  {{#if accept}} accept={{accept}} {{/if}}
  {{#if required}} required {{/if}}
  {{#if placeholder}} placeholder="{{placeholder}}" {{/if}}
/>
